<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Nomojowo</title>
    <!-- for icons  -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <!-- bootstrap  -->
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
    <!-- for swiper slider  -->
    <link rel="stylesheet" href="/stylesheets/swiper-bundle.min.css">

    <!-- fancy box  -->
    <link rel="stylesheet" href="/stylesheets/jquery.fancybox.min.css">
    <!-- custom css  -->
    <link rel="stylesheet" href="/stylesheets/style.css">
</head>

<body class="body-fixed">
    <!-- start of header  -->
    <header class="site-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-2">
                    <div class="header-logo">
                        <a href="/homepage">
                            <img src="/images/logo.png" width="160" height="50" alt="Logo">
                        </a>
                    </div>
                </div>
                <div class="col-lg-10">
                    <div class="main-navigation">
                        <button class="menu-toggle"><span></span><span></span></button>
                        <nav class="header-menu">
                            <ul class="menu food-nav-menu">
                                <li><a href="/homepage">Home</a></li>
                                <li><a href="#contact">Kontak</a></li>
                            </ul>
                        </nav>
                        <div class="header-right">
                            <form action="#" class="header-search-form for-des">
                                <input type="search" class="form-input" placeholder="Search Here...">
                                <button type="submit">
                                    <i class="uil uil-search"></i>
                                </button>
                            </form>
                            <a onClick="openMyCart()" class="header-btn header-cart">
                                <i class="uil uil-shopping-bag"></i>
                                <span class="cart-number" id="cart-number-count">0</span>
                            </a>
                            <div class="dropdown">
                                <label><button onclick="myFunction()" class="header-username"
                                        style="color: #ff8243; padding: 4px 8px;"><b><i>
                                                <%= username %>
                                            </i></b></button></label>
                                <div id="myDropdown" class="dropdown-content">
                                    <a href="/logout">Keluar</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- header ends  -->

    <section style="background-image: url(assets/images/menu-bg.png);" class="our-menu section bg-light repeat-img"
        id="menu">
        <div class="sec-wp">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="sec-title text-center mb-5">
                            <p class="sec-sub-title mb-3">menu</p>
                            <h2 class="h2-title">nikmati kelezatan hidangan kami<span>dengan harga terjangkau</span></h2>
                            <div class="sec-title-shape mb-4">
                                <img src="/images/title-shape.svg" alt="">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="menu-tab-wp">
                    <div class="row">
                        <div class="col-lg-12 m-auto">
                            <div class="menu-tab text-center">
                                <ul class="filters">
                                    <div class="filter-active"></div>
                                    <li class="filter"
                                        data-filter=".all, .chicken, .seafood, .diet, .pasta, .snack, .drink">
                                        <img src="/images/menu-1.png" alt="" style="height: 30px;">
                                        All
                                    </li>
                                    <li class="filter" data-filter=".chicken">
                                        <img src="/images/menu-2.png" alt="" style="height: 30px;">
                                        Chicken
                                    </li>
                                    <li class="filter" data-filter=".seafood">
                                        <img src="/images/menu-3.png" alt="" style="height: 30px;">
                                        Seafood
                                    </li>
                                    <li class="filter" data-filter=".diet">
                                        <img src="/images/menu-4.png" alt="" style="height: 30px;">
                                        Diet
                                    </li>
                                    <li class="filter" data-filter=".pasta">
                                        <img src="/images/menu-5.png" alt="" style="height: 30px;">
                                        Pasta
                                    </li>
                                    <li class="filter" data-filter=".snack">
                                        <img src="/images/menu-6.png" alt=""style="height: 30px;">
                                        Snack
                                    </li>
                                    <li class="filter" data-filter=".drink">
                                        <img src="/images/menu-7.png" alt="" style="height: 30px;">
                                        Drink
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="menu-list-row">
                    <div class="row g-xxl-5 bydefault_show" id="menu-dish"
                        style="background-image: url(/images/menu-bg.png);">
                        <% for(let i=0;i<items.length;i++) { %>
                            <div class="col-lg-4 col-sm-6 dish-box-wp <%= items[i].item_category %>"
                                data-cat="chicken">
                                <div class="dish-box text-center">
                                    <div class="dist-img">
                                        <img src="/images/dish/<%= items[i].item_img %>"
                                            alt="<%= items[i].item_name %>">
                                    </div>
                                    <div class="dish-title">
                                        <h3 class="h3-title">
                                            <%= items[i].item_name %>
                                        </h3>
                                        <p>
                                            <%= items[i].item_category %>
                                        </p>
                                    </div>
                                    <div class="dist-bottom-row">
                                        <ul>
                                            <li>
                                                <b>Rp <%= items[i].item_price %></b>
                                            </li>
                                            <li>
                                                <button class="dish-add-btn" id="btn<%= items[i].item_id %>"
                                                    onClick="addToCart(<%= items[i].item_id %>)">
                                                    <i class="uil uil-plus"></i>
                                                </button>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <% } %>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- footer starts  -->
    <footer class="site-footer" id="contact">
        <div class="top-footer section">
            <div class="sec-wp">
                <div class="container">
                    <div class="row">
                        <div class="col-lg-4">
                            <div class="footer-info">
                                <div class="footer-logo">
                                    <a href="/">
                                        <img src="/images/logo.png" alt="">
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-8">
                            <div class="footer-flex-box">
                                <div class="footer-table-info">
                                    <h3 class="h3-title">jam buka</h3>
                                    <ul>
                                        <li><i class="uil uil-clock"></i> Senin-Kamis : 08.00 - 00.00</li>
                                        <li><i class="uil uil-clock"></i> Jumat-Minggu : 08.00 - 22.00</li>
                                    </ul>
                                </div>
                                <div class="footer-menu food-nav-menu">
                                    <h3 class="h3-title">Tautan</h3>
                                    <ul class="column-2">
                                        <li> <a href="/" class="footer-active-menu">Home</a></li>
                                        <li><a href="#contact">Kontak</a></li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="bottom-footer">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <div class="copyright-text">
                            <p>Copyright &copy; 2024 <span class="name">Kelompok 3 | Nomojowo </span>All Rights
                                Reserved.
                            </p>
                        </div>
                    </div>
                </div>
                <button class="scrolltop"><i class="uil uil-angle-up"></i></button>
            </div>
        </div>
    </footer>
    </div>
    </div>


    <!-- jquery  -->
    <script src="/javascripts/jquery-3.5.1.min.js"></script>
    <!-- bootstrap -->
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/popper.min.js"></script>

    <!-- fontawesome  -->
    <script src="/javascripts/font-awesome.min.js"></script>

    <!-- swiper slider  -->
    <script src="/javascripts/swiper-bundle.min.js"></script>

    <!-- mixitup -- filter  -->
    <script src="/javascripts/jquery.mixitup.min.js"></script>

    <!-- fancy box  -->
    <script src="/javascripts/query.fancybox.min.js"></script>

    <!-- parallax  -->
    <script src="/javascripts/parallax.min.js"></script>

    <!-- gsap  -->
    <script src="/javascripts/gsap.min.js"></script>

    <!-- scroll trigger  -->
    <script src="/javascripts/ScrollTrigger.min.js"></script>
    <!-- scroll to plugin  -->
    <script src="/javascripts/ScrollToPlugin.min.js"></script>
    <!-- rellax  -->
    <!-- <script src="assets/js/rellax.min.js"></script> -->
    <!-- <script src="assets/js/rellax-custom.js"></script> -->
    <!-- smooth scroll  -->
    <script src="/javascripts/smooth-scroll.js"></script>
    <!-- custom js  -->
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/cart.js"></script>

    </div>
    </div>
</body>

</html>